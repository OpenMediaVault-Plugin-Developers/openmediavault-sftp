set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
    configure)

        SERVICE_XPATH_NAME="sftp"
        SERVICE_XPATH="/config/services/${SERVICE_XPATH_NAME}"

        omv_set_default "OMV_SSHD_SUBSYSTEM_SFTP" "internal-sftp"
        omv_set_default "OMV_SSHD_ALLOWGROUPS" "root ssh sftp-access"


        if ! omv_config_exists "${SERVICE_XPATH}"; then
            omv_config_add_node "/config/services" "${SERVICE_XPATH_NAME}"
            omv_config_add_node "${SERVICE_XPATH}" "shares"
        fi

        if ! getent group sftp-access >/dev/null 2>&1; then
            groupadd sftp-access
        fi

        if deb-systemd-helper is-enabled ssh.service; then
            omv-mkconf ssh
            deb-systemd-invoke restart ssh.service >/dev/null || true
        fi

        dpkg-trigger update-fixperms
        dpkg-trigger update-locale
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument '$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
